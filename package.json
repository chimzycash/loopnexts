{
  "name": "loopnexts",
  "version": "3.0.0",
  "description": "Loopback 4 + NextJS 8 + TypeScript 3 + React 16 + SemanticUI 2",
  "repository": "git@github.com:miZyind/loopnexts.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -T server/index.ts",
    "serve": "node .",
    "build": "rimraf dist && tsc && yarn build:client",
    "build:client": "rimraf client/.next && cpx client/**/* dist/client && next build dist/client",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix"
  },
  "engines": {
    "node": ">=8.9"
  },
  "babel": {
    "presets": [
      "next/babel",
      "@zeit/next-typescript/babel"
    ],
    "plugins": [
      "styled-components"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "dependencies": {
    "@loopback/boot": "^1.1.3",
    "@loopback/context": "^1.9.0",
    "@loopback/core": "^1.3.0",
    "@loopback/openapi-v3": "^1.3.3",
    "@loopback/repository": "^1.3.0",
    "@loopback/rest": "^1.10.0",
    "@loopback/rest-explorer": "^1.1.14",
    "@loopback/service-proxy": "^1.1.2",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "chalk": "^2.4.2",
    "dotenv": "^7.0.0",
    "next": "^8.0.4",
    "next-routes": "^1.4.2",
    "pino": "^5.12.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.86.0",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@loopback/testlab": "^1.2.2",
    "@types/next": "^8.0.3",
    "@types/node": "^11.13.0",
    "@types/pino": "^5.8.6",
    "@types/styled-components": "^4.1.13",
    "@types/webpack": "^4.4.27",
    "babel-plugin-styled-components": "^1.10.0",
    "cpx": "^1.5.0",
    "file-loader": "^3.0.1",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.2",
    "webpack": "^4.29.6"
  }
}
