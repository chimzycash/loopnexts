{
  "name": "loopnexts",
  "version": "3.0.0",
  "description": "Isomorphic React application boilerplate.",
  "repository": "git@github.com:miZyind/loopnexts.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf build/*",
    "dev": "ts-node -r tsconfig-paths/register -T server/server.ts",
    "start": "node build/server/server.js",
    "build": "yarn clean && tsc && copyfiles \"server/**/*.json\" build/server -u 1",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix"
  },
  "babel": {
    "presets": [
      "next/babel",
      "@zeit/next-typescript/babel"
    ],
    "plugins": [
      "styled-components"
    ]
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "helmet": "^3.15.0",
    "loopback": "^3.24.0",
    "loopback-boot": "^2.27.1",
    "loopback-component-explorer": "^6.3.1",
    "next": "^7.0.2",
    "next-optimized-images": "^1.4.1",
    "next-routes": "^1.4.2",
    "pino": "^5.8.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^5.1.1",
    "redux": "^4.0.1",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.83.0",
    "strong-error-handler": "^3.2.0",
    "styled-components": "^4.1.1"
  },
  "devDependencies": {
    "@types/loopback": "^3.2.6",
    "@types/loopback-boot": "^2.23.4",
    "@types/next": "^7.0.5",
    "@types/pino": "^5.8.2",
    "@types/styled-components": "^4.1.1",
    "@types/webpack": "^4.4.19",
    "babel-plugin-styled-components": "^1.8.0",
    "copyfiles": "^2.1.0",
    "file-loader": "^2.0.0",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6"
  }
}
